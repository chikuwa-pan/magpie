    <h3>登録する</h3>

<%= form_with(model: @item, local: true) do |f| %>
  <div>
    <p>画像</p>
    <%= f.file_field :image, id:"item-image" %>
  </div>
  <div>
    <p>名前</p>
    <%= f.text_field :name, placeholder: "name" %>
  </div>
  <div>
    <p>タグ</p>
    <%= f.text_field :tag, placeholder: "タグ" %>
  </div>
  <div>
    <p>コンディション</p>
    <%#= f.collection_select(:condition_id, Condition.all, :id, :name, {}, {id:"condition"}) %>
  </div>
  <div>
    <p>レア度</p>
    <%#= f.collection_select(:rarity_id, Rarity.all, :id, :name, {}, {id:"rarity"}) %>
  </div>
  <div>
    <p>型番</p>
    <%= f.text_field :product, placeholder: "" %>
  </div>
  <div>
    <p>発売日</p>
    <%= f.text_field :release, placeholder: "" %>
  </div>
  <div>
    <p>入手ルート</p>
    <%= f.text_field :route, placeholder: "" %>
  </div>
  <div>
    <p>memo</p>
    <%= f.text_area :memo, placeholder: "memo", rows: "10" %>
  </div>
  <div><%= f.submit "SAVE" %></div>
<% end %>