<div class="bg_image">
  <div class="bg_fff">
    <div class="wrapper">
      <h2 class="title flex flex_center">'<%= @tag.tag_name %>' 一覧</h2>
        <div class="flex flex_wrap">
          <% if @tag.present? %>
            <% @items.each do |item| %>
              <%= render partial: "item", locals: { item: item } %>
            <% end %>
            <%= paginate @items %>
          <% else %>
          <p>該当するアイテムはありません。</p>
          <% end %>
        </div>
    </div>
  </div>
</div>