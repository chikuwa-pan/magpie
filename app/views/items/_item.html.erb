  <div class="main__item-list">
    <div class="box__images box__images--list">
      <% if item.images.attached? %>
        <%= link_to item_path(item) do %>
          <%= image_tag item.images[0], class: "box__image" %>
        <% end %>
      <% end %>
    </div>

    <%= link_to item.name, item_path(item), class: :itemList__name %>
    
    <div class="item__tag-list">
      <!-- アイテムに関連するタグを取得 -->
      <% @tag_list = item.tags %>
      <!--タグリスト-->
      <% @tag_list.each do |list|%>
        <%=link_to list.tag_name,search_tag_path(tag_id: list.id) %>
        <%="(#{list.items.count})" %>
      <% end %>
    </div>

      <p>レア度：
        <% if item.rarity_id.present? %>
          <%= Rarity.find(item.rarity_id).name %>
        <% else %>
          -
        <% end %>
      </p>
  </div>
