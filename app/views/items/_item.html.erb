  <div class="list_3column">
    <div class="list_image_box">
      <% if item.image.attached? %>
        <%= link_to item_path(item) do %>
          <%= image_tag item.image, class: "item-box-img" %>
        <% end %>
      <% end %>
    </div>

    <%= link_to item.name, item_path(item), class: :item_title %>
    
    <div class="tag_list">
      <!-- アイテムに関連するタグを取得 -->
      <% @tag_list = item.tags %>
      <!--タグリスト-->
      <% @tag_list.each do |list|%>
        <%=link_to list.tag_name,search_tag_path(tag_id: list.id) %>
        <%="(#{list.items.count})" %>
      <% end %>
    </div>

      <p>レア度：
        <% if item.rarity_id.present? %>
          <%= Rarity.find(item.rarity_id).name %>
        <% else %>
          -
        <% end %>
      </p>
  </div>
