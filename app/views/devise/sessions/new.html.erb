<div class="wrapper wrapper__form">
  <h2 class="page__title">
    <span class="material-symbols-rounded main__button--name">login</span>
    <span class="main__button--name">Log in</span>
  </h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form__field">
      <%= f.label :email, class:"field_title" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form__input form__input--round" %>
    </div>

  <div class="form__field">
      <%= f.label :password, class:"field_title" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:"form__input form__input--round" %>
    </div>

    <% if devise_mapping.rememberable? %>
  <div class="form__field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="button main__button">
      <%= f.submit "Log in", class:"form_input", id:"submit" %>
    </div>
  <% end %>

  <%#= render "devise/shared/links" %>
</div>
